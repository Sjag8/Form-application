        </div>

        <!-- Job Slip Form (Initially hidden) -->
        <div id="jobSlipForm" style="display: none;">
            <h2>Job Slip</h2> 
            <form action="submit_job_slip.php" method="post">
                <label for="department">Department:</label>
                <input type="text" id="jobRequisitionNo" name="jobRequisitionNo">
                </select>

                <label for="jobOriginationDate">Job Origination Date:</label>
                <input type="date" id="jobOriginationDate" name="jobOriginationDate">

                <label for="jobRequiredDate">Job Required Date:</label>
                <input type="date" id="jobRequiredDate" name="jobRequiredDate">

                <label for="material">Material:</label>
                <input type="text" id="material" name "material">

                <label for="quantity">Quantity:</label>
                <input type="text" id="quantity" name="quantity" placeholder="Enter Quantity">

                <label for="jobDescription">Job Description:</label>
                <textarea id="jobDescription" name="jobDescription"></textarea>

                <label for="jobDrawing">Add Job Drawing/Picture:</label>
                <input type="file" id="jobDrawing" name="jobDrawing">

                <button type="submit">Submit Job Slip</button>
                <button type="button" onclick="showForms()">Back to Forms</button>
            </form>
        </div>



        <!-- Workshop Details Form (Initially hidden) -->
        <div id="workshopDetailsForm" style="display: none;">
            <h2>Workshop Details</h2>
            <form action="submit_workshop_details.php" method="post">
